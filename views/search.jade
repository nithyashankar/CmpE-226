extends layout2

block content
	<form name="searchBar" action="/search">
	table(class="table3" bgcolor="#000000")
		tr
			td(style="text-align: left")
				<center><img src="/logo.png" "width=120" height="90"><font color="#FFFFFF" font-family="Tahoma" size="4"><i>BuyHere!</i><bold></font></center>
			td(style="text-align: right")
				<font color="#FFFFFF" size="2">Select Category: </font>
				<select name="selectedCategory">
				<option value="All">All</option>
				<option value="Books">Books</option>
				<option value="Movies-DVDs">Movies-DVDs</option>
				<option value="Music-CDs">Music-CDs</option>
				<option value="Refridgerator">Refridgerator</option>
				<option value="Television">Television</option>
				<option value="Microwave">Microwave</option>
				<option value="Audio Systems">Audio Systems</option>
				<option value="Shoes">Shoes</option>
				<option value="Bags">Bags</option>
				<option value="Diapers">Diapers</option>
				</select>
				<br>
				<font color="#FFFFFF" size="2">Filter Rating <i>(optional)</i>: </font>
				<input type="radio" name="rating" value="1star"><font color="#FFFFFF" size="1">1</font>
				<input type="radio" name="rating" value="2star"><font color="#FFFFFF" size="1">2</font>
				<input type="radio" name="rating" value="3star"><font color="#FFFFFF" size="1">3</font>
				<input type="radio" name="rating" value="4star"><font color="#FFFFFF" size="1">4</font>
				<input type="radio" name="rating" value="5star"><font color="#FFFFFF" size="1">5</font>
				<input type="radio" name="rating" value="" checked="true"><font color="#FFFFFF" size="1">All</font>
				<br>
				<font color="#FFFFFF" size="2">Enter Search Text: </font>
				<input type="text" name="searchText" size="32" maxlength="32">
				<input type="submit" value="GO">
				</form>
	table(class="table3")
		tr
			td(colspan=2 bgcolor="FFFFFF")<center><font color=red font-family=tahoma size="2"><b><i>Search Results Below</i></b></font></center>
	table(class="table1")
		tr
			td(colspan=2)
				each result, i in searchresults
					<font size=3 color=blue>
					=JSON.stringify(result,null,'\t')
					<p>
					<hr>
					<p>
					</font>